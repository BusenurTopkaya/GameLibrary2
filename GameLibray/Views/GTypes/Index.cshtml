@model IEnumerable<GameLibray.Models.Entities.GType>

@{
    ViewBag.Title = "Index";
}

<h2>Types</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TypeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TypeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TypeId }, new { @class = "btn btn-success btn-sm" }) |
            @Html.ActionLink("Details", "Details", new { id=item.TypeId }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TypeId }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
