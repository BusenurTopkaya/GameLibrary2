@model IEnumerable<GameLibray.Models.Entities.Game>

@{
    ViewBag.Title = "Index";
}

<h1 style="color:azure ;background-color:cadetblue;">Games</h1>
<td> @Html.ActionLink("Create New", "Create", null, new { @style = "font-size:larger;color:green;" }, new { @class = "btn btn-info glyphicon glyphicon-star-empty" }) </td>


<table class="table" width="100">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameAbout)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GameName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameAbout)
            </td>

            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.GameId }, new { @class = "btn btn-success btn-sm" }) |
                @Html.ActionLink("Details", "Details", new { id = item.GameId }, new { @class = "btn btn-info btn-sm" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GameId }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>


    }

</table>

